<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgquiz"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jamesrussel.javamadeeasy.ResultActivity"
    style="?android:attr/buttonBarStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/toolbar_dropshadow"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/brightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:text="Result"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:drawablePadding="2dp"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        android:layout_margin="20dp"
        card_view:cardElevation="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/rank"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:id="@+id/score"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:id="@+id/correct_anwsers"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:visibility="gone"
        android:id="@+id/time"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
    <info.hoang8f.widget.FButton
        android:id="@+id/high"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/see_high_score"
        android:textSize="22sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textColor="@drawable/startcolor"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:drawableLeft="@drawable/ic_high2"
        fbutton:shadowHeight="6dp"
        android:paddingTop="-5dp"
        fbutton:buttonColor="@color/fbutton_color_turquoise"
        android:minHeight="60dp"
        android:minWidth="250dp"
        fbutton:shadowColor="@color/colorPrimaryDark"
        />
    <info.hoang8f.widget.FButton
        android:id="@+id/play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/replay"
        android:textSize="22sp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textColor="@drawable/startcolor"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_play2"
        fbutton:shadowHeight="6dp"
        android:paddingTop="-5dp"
        fbutton:buttonColor="@color/fbutton_color_turquoise"
        android:minHeight="60dp"
        android:minWidth="250dp"
        fbutton:shadowColor="@color/colorPrimaryDark"
        />
    <info.hoang8f.widget.FButton
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/return_to_main_menu"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:textColor="@drawable/startcolor"
        android:background="@drawable/buttonshape"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:drawableLeft="@drawable/ic_left2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        fbutton:shadowHeight="6dp"
        android:paddingTop="-5dp"
        fbutton:buttonColor="@color/fbutton_color_turquoise"
        android:minHeight="60dp"
        android:minWidth="250dp"
        fbutton:shadowColor="@color/colorPrimaryDark"
        />
        </LinearLayout>
    </ScrollView>
    </LinearLayout>

