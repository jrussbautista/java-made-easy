<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jamesrussel.javamadeeasy.SettingsActivity"
    android:id="@+id/main_container"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/brightness"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:textColor="@color/colorText"
            android:text="Adjust the Brightness"
            android:drawableLeft="@drawable/icn_brightness"
            android:textSize="15sp"
            android:drawablePadding="2dp"/>
</LinearLayout>
        <SeekBar
            android:id="@+id/brightbar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:max="10"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/separator_height"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:background="#d5d5d5"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/volume"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:textColor="@color/colorText"
                android:text="Adjust Volume"
                android:drawableLeft="@drawable/icn_volume2"
                android:textSize="15sp"
                android:drawablePadding="2dp"/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/sb"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:max="10"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/separator_height"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:background="#d5d5d5"

            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:textColor="@color/colorText"
            android:text="@string/change_theme"
            android:drawableLeft="@drawable/ic_day2"
            android:textSize="15sp"
            android:drawablePadding="2dp"/>

        <com.example.jamesrussel.javamadeeasy.DNToggleButton
            xmlns:dntogglebtn="http://schemas.android.com/apk/res-auto"
            android:id="@+id/dnBtn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            dntogglebtn:duration="250"/>
    </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/separator_height"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:background="#d5d5d5"
            />
        <TextView
            android:id="@+id/apps2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="Share this app with your friend"
            android:textSize="15sp"
            android:textColor = "@drawable/startcolor3"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/separator_height"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:background="#d5d5d5"
            />
        <TextView
            android:id="@+id/see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:text="See more apps"
            android:textSize="15sp"
            android:textColor = "@drawable/startcolor3"
            android:drawablePadding="2dp"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/separator_height"
            android:layout_marginTop="@dimen/margin_small"
            android:background="#d5d5d5"
            />
            </LinearLayout>
</ScrollView>
