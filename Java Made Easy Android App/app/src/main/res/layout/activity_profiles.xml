<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bgquiz"
    tools:context="com.example.jamesrussel.javamadeeasy.ProfilesActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/toolbar_dropshadow"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/brightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:text="Profile List"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:drawablePadding="2dp"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/profile_list"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@drawable/toolbar_dropshadow"
        style="?android:attr/buttonBarStyle">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/name2"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/enter_name"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/add"
            android:layout_height="wrap_content"
            android:text="@string/add_profile"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@drawable/startcolor"
            android:background="@drawable/buttonshape2"
            style="?android:attr/borderlessButtonStyle"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#388E3C"
            fancy:fb_focusColor="#5577bd"
            fancy:fb_iconPosition="right"
            fancy:fb_radius="30dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            fancy:fb_text="Add Profile"
            fancy:fb_textColor="#FFFFFF"
            />

    </LinearLayout>

</LinearLayout>
