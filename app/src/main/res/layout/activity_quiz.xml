<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgquiz"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jamesrussel.javamadeeasy.MyQuizActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fillViewport="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center|top"
                android:padding="15dp"
                android:background="@drawable/toolbar_dropshadow"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/brightness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Java Quiz Game"
                android:textSize="35sp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"
                android:drawableRight="@drawable/java"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:drawablePadding="10dp"/>
            </LinearLayout>
            <info.hoang8f.widget.FButton
                android:id="@+id/play"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/play"
                fbutton:shadowEnabled="true"
                android:textColor = "@drawable/startcolor"
                android:textSize = "25sp"
                android:textStyle = "bold"
                android:layout_centerHorizontal="true"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:drawableLeft="@drawable/ic_play2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                fbutton:shadowHeight="6dp"
                android:paddingTop="-5dp"
                fbutton:buttonColor="@color/fbutton_color_turquoise"
                android:minHeight="60dp"
                android:minWidth="250dp"
                fbutton:shadowColor="@color/colorPrimaryDark"
                />

            <Button
                android:layout_weight = "3"
                android:layout_height="0dp"
                android:layout_width="fill_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:onClick="custom"
                android:text="@string/custom_categories"
                android:textColor = "@drawable/startcolor"
                android:textSize = "40sp"
                android:visibility="gone"
                android:textStyle = "bold"
                style="?android:attr/borderlessButtonStyle"
                />

            <info.hoang8f.widget.FButton
                android:id="@+id/high"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                fbutton:shadowColor="@color/colorPrimaryDark"
                fbutton:shadowHeight="6dp"
                android:paddingTop="-5dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                fbutton:buttonColor="@color/fbutton_color_turquoise"
                fbutton:shadowEnabled="true"
                android:layout_weight = "0"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/high_scores"
                android:padding="20dp"
                android:textColor = "@drawable/startcolor"
                android:textSize = "25sp"
                android:textStyle = "bold"
                android:drawableLeft="@drawable/ic_high2"
                android:minHeight="60dp"
                android:minWidth="250dp"
                />
            <info.hoang8f.widget.FButton
                android:id="@+id/profile"
                fbutton:shadowHeight="6dp"
                android:paddingTop="-5dp"
                android:paddingLeft="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingRight="20dp"
                fbutton:shadowColor="@color/colorPrimaryDark"
                fbutton:buttonColor="@color/fbutton_color_turquoise"
                fbutton:shadowEnabled="true"
                android:minHeight="60dp"
                android:minWidth="250dp"
                android:layout_weight = "0"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="PROFILE"
                android:textColor = "@drawable/startcolor"
                android:textSize = "25sp"
                android:textStyle = "bold"
                android:drawableLeft="@drawable/ic_profile2"
                android:padding="20dp"
                />

            <info.hoang8f.widget.FButton
                android:id="@+id/rules"
                fbutton:shadowHeight="6dp"
                android:paddingTop="-5dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                fbutton:shadowColor="@color/colorPrimaryDark"
                fbutton:buttonColor="@color/fbutton_color_turquoise"
                fbutton:shadowEnabled="true"
                android:minHeight="60dp"
                android:minWidth="250dp"
                android:layout_weight = "0"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="RULES"
                android:layout_gravity="center_vertical"
                android:textColor = "@drawable/startcolor"
                android:textSize = "25sp"
                android:drawableLeft="@drawable/ic_rules2"
                android:textStyle = "bold"
                android:padding="20dp"
                android:background="@drawable/buttonshape"
                />
            <info.hoang8f.widget.FButton
                android:id="@+id/back"
                fbutton:shadowHeight="6dp"
                android:paddingTop="-5dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                fbutton:shadowColor="@color/colorPrimaryDark"
                fbutton:buttonColor="@color/fbutton_color_turquoise"
                fbutton:shadowEnabled="true"
                android:minHeight="60dp"
                android:minWidth="250dp"
                android:layout_weight = "0"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="BACK"
                android:layout_gravity="center_vertical"
                android:textColor = "@drawable/startcolor"
                android:textSize = "25sp"
                android:textStyle = "bold"
                android:padding="20dp"
                android:drawableLeft="@drawable/ic_left2"
                />
        </LinearLayout>

    </ScrollView>
</android.support.v4.widget.NestedScrollView>

