<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bgquiz"
    tools:context="com.example.iths.asobi.HighscoreActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/toolbar_dropshadow"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/brightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:text="Choose a Chapter that you want to show the High Score"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:drawablePadding="2dp"/>
    </LinearLayout>
    <TextView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Chapters"
        android:textSize="25sp"
        android:minHeight="50dp"
        android:minWidth="250dp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:onClick="showHighScores"
        android:layout_marginTop="5dp"
        android:background="@drawable/btnblue"
        android:textColor="@drawable/startcolor"
     />

    <ListView
        android:id="@+id/high_score_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/transparent"
        android:dividerHeight="10dp"
        android:drawSelectorOnTop="true"
        android:footerDividersEnabled="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scrollbarStyle="outsideOverlay"
        >
    </ListView>
</LinearLayout>
